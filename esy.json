{
  "name": "@repkgs/cli",
  "version": "0.1.0",
  "description": "Starter Reason Esy Pesy Project",
  "esy": {
    "build": "dune build -p repkgs--cli",
    "buildDev": "refmterr dune build -p repkgs--cli",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": { "releasedBinaries": [ "RePkgsCli.exe" ] },
    "buildEnv": { "ODOC_SYNTAX": "re" }
  },
  "buildDirs": {
    "test": {
      "imports": [
        "Library = require('@repkgs/cli/library')",
        "Rely = require('rely/lib')", "Lwt_unix = require('lwt/unix')"
      ],
      "flags": [ "-linkall", "-g", "-w", "-9" ],
      "includeSubdirs": "unqualified"
    },
    "testExe": {
      "imports": [ "Test = require('@repkgs/cli/test')" ],
      "bin": { "RunRePkgsTests.exe": "RunRePkgsTests.re" }
    },
    "library": {
      "imports": [
        "Console = require('console/lib')", "Pastel = require('pastel/lib')",
        "Logs = require('logs')", "Fpath = require('fpath')",
        "Dune_glob = require('@opam/dune-glob')",
        "Yojson = require('@opam/yojson')"
      ],
      "preprocess": [ "pps", "lwt_ppx", "ppx_deriving_yojson" ],
      "includeSubdirs": "unqualified"
    },
    "bin": {
      "imports": [
        "Library = require('@repkgs/cli/library')",
        "Console = require('console/lib')", "Pastel = require('pastel/lib')",
        "Cmdliner = require('cmdliner')", "Lwt = require('@opam/lwt')",
        "Lwt_unix = require('lwt/unix')", "Logs = require('logs')",
        "Logs_cli = require('logs/cli')", "Logs_fmt = require('logs/fmt')",
        "Logs_lwt = require('logs/lwt')", "Fmt_tty = require('fmt/tty')",
        "Fmt_cli = require('fmt/cli')", "Fpath = require('fpath')"
      ],
      "preprocess": [ "pps", "lwt_ppx" ],
      "bin": { "RePkgs.exe": "RePkgsCli.re" },
      "includeSubdirs": "unqualified"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "start": "esy x RePkgs.exe",
    "test": "esy x RunRePkgsTests.exe",
    "doc": "esy dune build @doc",
    "doc-path": "esy echo #{self.target_dir}/default/_doc/_html/index.html"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": "2.1.3",
    "@opam/dune-glob": "2.1.3",
    
    "@opam/fmt": "0.8.8",
    "@opam/fpath": "0.7.2",
    "@opam/logs": "0.7.0",
    "@opam/lwt": "5.1.1",
    "@opam/lwt_ppx": "2.0.0",
    "@opam/ppx_deriving_yojson": "3.5.1",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "@reason-native/rely": "*",
    "ocaml": "~4.8.1000"
  },
  "devDependencies": {
    "refmterr": "*",
    "@opam/merlin": "*",
    "ocaml": "~4.8.1000",
    "@opam/odoc": "*",
    "@pesy/esy-pesy": "0.1.0-alpha.5"
  }
}